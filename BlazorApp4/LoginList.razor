<div class="table-responsive">
<table class="table table-striped">
    
        @if (IsDemo)
            {
                <thead>
                <tr>
                    <th>Login</th>
                    <th>PhoneNumber</th>
                    <th>Action</th>
                </tr>
                </thead>
            <tbody>
                @foreach (var item in Logins)
                {
                    <tr>
                        <td>@item.Login</td>
                        <td>@item.PhoneNumber</td>
                        <td><button class="btn btn-primary" >ShowSingle</button></td>
                    </tr>
                }
            </tbody>
            }
        else
        {
            <thead>
            <tr>
                <th>Login</th>
                <th>Surname</th>
                <th>Name</th>
                <th>PhoneNumber</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Logins)
                {
                    //@userLogin = item.Login;
                    <tr>
                    <td>@item.Login</td>
                    @*@userLogin = @item.Login;*@
                    @if (item.Surname == null)
                    {
                        <td>No Data</td>
                    }
                    else
                    {
                        <td>@item.Surname</td>
                    }

                    @if (item.Name == null)
                    {
                        <td>No Data</td>
                    }
                    else
                    {
                        <td>@item.Name</td>
                    }
                    <td>@item.PhoneNumber</td>
                    <td><button class="btn btn-primary" @onclick="ActionM" >ShowSingle</button></td> 
                    <td><a href="userPage">show User</a></td>
                </tr>
                }
            </tbody>
        }
    
        
    </table>
</div>

@code {
    [Parameter]
    public List<User> Logins { get; set; }
    [Parameter]
    public bool IsDemo { get; set; }
    private string Login;
    private string Name;
    private string Surname;
    private string Phone;

    public string userLogin;
    private void ActionM()
    {
        //string userLogin = login;
        User user = User.GetUser(userLogin);
