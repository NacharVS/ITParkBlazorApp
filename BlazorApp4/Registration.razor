@page "/regist"

<h3>Registration</h3>

<h4>Login</h4>
<input @bind-value="Login"/><br /><br />
<h4>Name</h4>
<input @bind-value="Name" /><br /><br />
<h4>Surname</h4>
<input @bind-value="Surname" /><br /><br />
<h4>Phone Number</h4>
<input @bind-value="Phone" /><br /><br />
<br />
<button class="btn btn-primary" @onclick="RegistrationD">SignIn</button>

@code {
    private string Login;
    private string Name;
    private string Surname;
    private string Phone;


    private void RegistrationD()
    {
        //User.GetDemoList(Name);
        User.AddUserToDB(new User(Login, Surname, Name, Phone));
    }


}

