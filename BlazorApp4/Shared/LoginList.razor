

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            @if (Logins == null)
            {
                <tr>
                    <th>Loading....</th>

                </tr>
            }
            else
            {
                @if (IsDemo)
                {
                    <tr>
                        <th>Login</th>
                        <th>PhoneNumber</th>
                    </tr>
                <tbody>
                    @foreach (var item in Logins)
                    {
                        <tr>
                            <td>@item.Login</td>
                            <td>@item.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tr>
                    <th>Login</th>
                    <th>Surname</th>
                    <th>Name</th>
                    <th>PhoneNumber</th>
                </tr>
                <tbody>
                    @foreach (var item in Logins)
                    {
                        <tr>
                            <td>@item.Login</td>
                            @if (item.Surname == null)
                            {
                                <td>No Data</td>
                            }
                            else
                            {
                                <td>@item.Surname</td>
                            }

                            <td>No Data</td>
                            <td>@item.PhoneNumber</td>
                        </tr>
                    }
                </tbody>
            }
            }

            </thead>

        </table>
    </div>

    @code {
        [Parameter]
        public List<User> Logins { get; set; }
        [Parameter]
        public bool IsDemo { get; set; }

      
}
