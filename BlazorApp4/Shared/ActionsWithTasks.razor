@if (actions)
{
<div class="row">
    <div class="col">
        <input class="form-control" placeholder="Input new task here" @bind-value="_newTask" />
    </div>
    <div class="col">
        <input class="form-control" placeholder="Input planning day" @bind-value="_day" />
    </div>
    <div class="col col-auto">
        <button class="btn btn-outline-dark" @onclick="(()=> addNewTaskEvent.InvokeAsync(_newTask))">Add New Task</button>
    </div>
    <div class="col col-auto">
        <button class="btn btn-primary" @onclick="AddToDB">Save Task List</button>
    </div>
    @if (isAdmin)
    {
        <div class="col col-auto">
            <button class="btn btn-danger" @onclick="AddToDB">Edit</button>
        </div>
    }
</div>
}

@code {
    [Parameter]
    public List<TaskItem> _tasks { get; set; }
    [Parameter]
    public bool actions { get; set; }
    [Parameter]
    public bool isAdmin { get; set; }
    private string _day;

    private static string _searchDay = string.Empty;

    private string _newTask { get; set; }
    [Parameter]
    public EventCallback<string> addNewTaskEvent { get; set; }


    private void AddToDB()
    {
        if (!string.IsNullOrEmpty(_day))
        {
            TaskListDB.AddItem(new TaskListDB(_tasks), _day);
        }
        _day = string.Empty;
    }

    private void GetList()
    {
