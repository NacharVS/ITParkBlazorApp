@page "/"


<h1>Calculator</h1>
<h3>@currentCount</h3>




<button class="btn btn-primary" @onclick="AddDigit1">1</button>
<button class="btn btn-primary" @onclick="AddDigit2">2</button>
<button class="btn btn-primary" @onclick="AddDigit3">3</button>
<button class="btn btn-primary" @onclick="Divide">/</button>
<br />
<button class="btn btn-primary" @onclick="AddDigit4">4</button>
<button class="btn btn-primary" @onclick="AddDigit5">5</button>
<button class="btn btn-primary" @onclick="AddDigit6">6</button>
<button class="btn btn-primary" @onclick="Мultiply">*</button>
<br />
<button class="btn btn-primary" @onclick="AddDigit7">7</button>
<button class="btn btn-primary" @onclick="AddDigit8">8</button>
<button class="btn btn-primary" @onclick="AddDigit9">9</button>
<button class="btn btn-primary" @onclick="Minus">-</button>
<br />
<button class="btn btn-primary" @onclick="Delete">СЕ</button>
<button class="btn btn-primary" @onclick="AddDigit0">0</button>
<button class="btn btn-primary" @onclick="Res">=</button>
<button class="btn btn-primary" @onclick="Plus">+</button>


@code {
    private string currentCount;

    private int buffer;

    static string sign;

    private void AddDigit1()
    {
        currentCount += "1";
    }

    private void AddDigit2()
    {
        currentCount += "2";
    }

    private void AddDigit3()
    {
        currentCount += "3";
    }

    private void AddDigit4()
    {
        currentCount += "4";
    }

    private void AddDigit5()
    {
        currentCount += "5";
    }

    private void AddDigit6()
    {
        currentCount += "6";
    }

    private void AddDigit7()
    {
        currentCount += "7";
    }

    private void AddDigit8()
    {
        currentCount += "8";
    }

    private void AddDigit9()
    {
        currentCount += "9";
    }

    private void AddDigit0()
    {
        currentCount += "0";

    }



    private void Plus()
    {
        buffer = Convert.ToInt32(currentCount);
        currentCount = "";
        sign = "+";
    }

    private void Divide()
    {
        buffer = Convert.ToInt32(currentCount);
        currentCount = "";
        sign = "/";
    }

    private void Мultiply()
    {
        buffer = Convert.ToInt32(currentCount);
        currentCount = "";
        sign = "*";
    }

    private void Minus()
    {
        buffer = Convert.ToInt32(currentCount);
        currentCount = "";
        sign = "-";
    }

    private void Delete()
    {
        buffer = Convert.ToInt32(currentCount);

        if (Convert.ToInt32(buffer) / 10 == 0)
        {
            currentCount = "";
        }
        else
        {
            currentCount = ((Convert.ToInt32(buffer)) / 10).ToString();
        }

    }

    private void Res()
    {

        switch (sign)
        {
            case "+":
                currentCount = (Convert.ToInt32(currentCount) + buffer).ToString();
                break;
            case "-":
                currentCount = (Convert.ToInt32(currentCount) - buffer).ToString();
                break;
            case "/":
                currentCount = (Convert.ToInt32(currentCount) / buffer).ToString();
                break;
            case "*":
                currentCount = (Convert.ToInt32(currentCount) * buffer).ToString();
                break;
        }


    }








}
